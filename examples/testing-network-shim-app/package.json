{
    "name": "testing-network-shim-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "axios": "^0.21.0",
        "json-server": "^0.16.3",
        "json-server-reset": "^1.3.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-scripts": "4.0.1",
        "web-vitals": "^0.2.4"
    },
    "devDependencies": {
        "@dhis2/cli-utils-cypress": "file:../../packages/cli",
        "@dhis2/cypress-commands": "file:../../packages/cypress-commands",
        "@dhis2/cypress-plugins": "file:../../packages/cypress-plugins",
        "concurrently": "^6.1.0"
    },
    "scripts": {
        "install:with-remove": "yarn install && (cd node_modules/@dhis2 && rm -rf cli-utils-cypress && rm -rf cypress-commands && rm -rf cypress-plugins)",
        "serve": "json-server src/json-server/db.js --routes ./src/json-server/routes.json --middlewares ./node_modules/json-server-reset --watch -p 1337",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "cy:start": "BROWSER=none yarn start",
        "cy:serve-and-start": "concurrently \"yarn serve\" \"yarn cy:start\"",
        "cy:open": "d2-utils-cypress open --appStart 'yarn start'",
        "cy:run": "d2-utils-cypress run --appStart 'yarn start'",
        "cy:capture": "d2-utils-cypress run --capture --appStart 'yarn cy:serve-and-start' --serverMinorVersion 36",
        "cy:capture-ci": "npx --no-install wait-on http-get://localhost:3000 && npx --no-install cypress run --port 54321 --browser chrome --env dhis2_api_stub_mode=CAPTURE,dhis2_server_minor_version=36 --headless true",
        "cy:stub": "d2-utils-cypress run --stub --appStart 'yarn cy:start' --serverMinorVersion 36",
        "cy:stub-ci": "npx --no-install wait-on http-get://localhost:3000 && npx --no-install cypress run --port 54321 --browser chrome --env dhis2_api_stub_mode=STUB,dhis2_server_minor_version=36 --headless"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
